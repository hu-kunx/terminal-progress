{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "outDir": "lib",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "example"
  ]
}
